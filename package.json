    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-svelte-csf": "^1.0.0",
    "@storybook/svelte": "^6.2.9",
    "babel-loader": "^8.2.2",
    "eslint": "^6.6.0",
    "eslint-plugin-svelte3": "^2.7.3",
